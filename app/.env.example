# Database Configuration
# PostgreSQL (default - recommended)
DATABASE_URL=postgresql://user:password@localhost:5432/db_appinfluencers

# Uncomment ONLY if switching to MySQL (comment out PostgreSQL above)
# DATABASE_URL=mysql://root:password@localhost:3306/db_appinfluencers

# Security
SECRET_KEY=your-secret-key-here-use-strong-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Trial Configuration
TRIAL_DURATION_HOURS=24

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
PLATFORM_COMMISSION_RATE=0.15

# Social Media APIs
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password

# Application
ENVIRONMENT=development
DEBUG=true
